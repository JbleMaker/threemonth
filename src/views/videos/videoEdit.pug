extends ../base

block content 
  h3 Edit Video 
  form.form__post(method="post") 
    input.form__post-space(name="title" type="text" required placeholder="Video Title" value=video.title )
    input.form__post-space(name="description" type="text" required placeholder="Description" value=video.description)
    input.form__post-space(name="hashtags" type="text" required placeholder="Hashtags" value=video.hashtags.join())
    input(value="SAVE" type="submit")