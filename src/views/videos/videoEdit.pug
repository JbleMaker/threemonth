extends ../base

block content 
  h4 Edit Video 
  form(method="post") 
    input(name="title" type="text" required placeholder="Video Title" value=video.title )
    input(name="description" type="text" required placeholder="Description" value=video.description)
    input(name="hashtags" type="text" required placeholder="Hashtags" value=video.hashtags.join())
    input(value="SAVE" type="submit")