extends ../base

block content 
  h3.video-post Video Upload
  form.form__post(method="post" enctype="multipart/form-data")
    if errorMessage 
      span=errorMessage
    label(for="video") Video File 
    input.form__post-space(type="file" accept="video/*" requried id="video" name="video")
    label(for="thumb") Thumbnail File
    input.form__post-space(type="file" accept="image/*", required, id="thumb" name="thumb")
    input.form__post-space(name="title" type="text" required placeholder="Title")
    input.form__post-space(name="description" type="text" required placeholder="Description")
    input.form__post-space(name="hashtags" type="text" required placeholder="Hashtags")
    input(type="submit" value="Upload")