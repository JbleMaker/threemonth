extends ../base

block content 
  if errorMessage
    span=errorMessage
  form.form__post(method="POST")
    input.form__post-space(placeholder="ID" name="identifier" type="text" required)
    input.form__post-space(placeholder="Password" name="password" type="password" required)
    input(placeholder="" type="submit" value="Login")
    include ../partials/social-login
  div.auth-switch
    span Don't have an Account? 
    a(href="/join") Create one now &rarr; 