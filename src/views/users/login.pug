extends ../base

block content 
  if errorMessage
    span=errorMessage
  form(method="POST")
    input(placeholder="ID" name="identifier" type="text" required)
    input(placeholder="Password" name="password" type="password" required)
    input(placeholder="" type="submit" value="Login")
    br
    a(href="/users/kakao/start") Continue with KAKAO LOGIN
  hr
  span Don't have an Account? 
  a(href="/join") Create one now &rarr; 