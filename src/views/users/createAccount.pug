extends ../base

block content 
  if errorMessage
    span=errorMessage
  form.form__post(method="post") 
    input.form__post-space(placeholder="ID" name="identifier" type="text", required)
    if idError
      h5=idError
    input.form__post-space(placeholder="Email" name="email" type="text", required)
    if emailError 
      h5=emailError
    input.form__post-space(placeholder="Password" name="password" type="password", required)
    input.form__post-space(placeholder="Password Check" name="passwordcheck" type="password", required)
    if passwordError
      h5=passwordError
    input.form__post-space(placeholder="Name" name="name" type="text", required)
    input.form__post-space(placeholder="Location" name="location" type="text", required)
    input(type="submit" value="Join")
    include ../partials/social-login
  div.auth-switch
    span Already have an Account? 
    a(href="/login") Log in now &rarr; 


