extends ../base

block content 
  if errorMessage
    span=errorMessage
  form(method="post") 
    input(placeholder="ID" name="identifier" type="text", required)
    if idError
      h5=idError
    input(placeholder="Email" name="email" type="text", required)
    if emailError 
      h5=emailError
    input(placeholder="Password" name="password" type="password", required)
    input(placeholder="Password Check" name="passwordcheck" type="password", required)
    if passwordError
      h5=passwordError
    input(placeholder="Name" name="name" type="text", required)
    input(placeholder="Location" name="location" type="text", required)
    input(type="submit" value="Join")
  hr
  span Already have an Account? 
  a(href="/login") Log in now &rarr; 


